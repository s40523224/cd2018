    ctx.stroke()
    ctx.closePath()
    ctx.beginPath()
    ctx.fillStyle = 'white'
    ctx.font = "16px Arial"
    x=x-5
    y=y+5
    ctx.fillText(text, x+xnum*20, y+ynum*25)
    ctx.fill()
    ctx.stroke()
    ctx.closePath()
&lt;/script&gt;
